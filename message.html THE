    <div class="message-box">
        <div id="typewriter"></div>
        <a href="surprise.html" id="nextBtn" class="nav-btn">I have one more thing to ask... üíç</a>
    </div>

    <script>
        const text = `My Dearest Achal,\n\nI‚Äôve spent a lot of time thinking about what makes me happy, and the answer is always you. You are my best friend, my home, and my soulmate. I can't imagine a single day without your smile. I want to build a future with you, full of love, laughter, and endless adventures...\n\nAre you ready?`;
        let i = 0;
        function type() {
            if (i < text.length) {
                document.getElementById("typewriter").innerHTML += text.charAt(i) === '\n' ? '<br>' : text.charAt(i);
                i++;
                setTimeout(type, 50);
            } else {
                document.getElementById("nextBtn").classList.add('show');
            }
        }
        window.onload = type;
    </script>
